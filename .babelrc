{
  "presets": [
    [
      "@babel/env",
      {
        "targets": {
          "node": true
        }
      }
    ],
    "@babel/typescript"
  ],
  "plugins": [
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread"
  ],
  "sourceMaps": true,
  "retainLines": true,

  // https://github.com/facebook/jest/issues/5920
  "env": {
    "test": {
      "plugins": ["dynamic-import-node"]
    }
  }
}
