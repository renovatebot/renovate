{
  "extends": "./tsconfig",
  "compilerOptions": {
    "resolveJsonModule": false,
    "isolatedModules": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["node"]
  },
  "exclude": [
    "./.cache",
    "./dist",
    "**/__mocks__/**",
    "**/__fixtures__/**",
    "**/__testutil__/**",
    "**/*.spec.ts",
    "./test",
    "./tools"
  ]
}
