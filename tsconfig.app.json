{
  "extends": "./tsconfig",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["node"]
  },
  "exclude": [
    "./.cache",
    "./dist",
    "**/__mocks__/**",
    "**/__fixtures__/**",
    "**/__testutil__/**",
    "**/test/**",
    "**/*.spec.ts",
    "jest.config.ts",
    "./test",
    "./tools"
  ]
}
