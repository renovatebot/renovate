{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUndeclaredDependencies": "error"
      },
      "style": {
        "noParameterProperties": "error",
        "useConsistentObjectDefinitions": {
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        },
        "useNamingConvention": {
          "level": "error",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "enumMember"
                },
                "formats": ["CONSTANT_CASE"]
              },
              {
                "match": ".*"
              }
            ]
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "identifierOrder": "lexicographic"
          }
        }
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/__fixtures__/**",
      "!**/__mocks__/**",
      "!**/*.d.ts",
      "!config.js",
      "!patches",
      "!tools/mkdocs/**"
    ]
  },
  "overrides": [
    {
      "includes": [
        "*.config.ts",
        "*.config.mts",
        "*.config.mjs",
        "*.config.js",
        "*.config.cjs",
        "test/**",
        "tools/**",
        "**/*.spec.ts"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredDependencies": "off"
          }
        }
      }
    }
  ]
}
